<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('partials/head') %>
</head>
<body class="bg-gray-100">
    <%- include('partials/nav') %>

    <div class="container mx-auto px-4 py-8">
        <div class="flex justify-between items-center mb-6">
            <h2 class="text-2xl font-bold">My Gallery</h2>
            <a href="/upload" class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600 transition-colors">
                Upload New Image
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% images.forEach(image => { %>
                <div class="bg-white rounded-lg shadow-md overflow-hidden">
                    <img src="<%= image.imagePath %>" alt="<%= image.title %>" 
                        class="w-full h-48 object-cover">
                    <div class="p-4">
                        <h3 class="font-bold text-lg mb-2"><%= image.title %></h3>
                        <p class="text-gray-600"><%= image.description %></p>
                        <p class="text-sm text-gray-500 mt-2">
                            <%= new Date(image.createdAt).toLocaleDateString() %>
                        </p>
                    </div>
                </div>
            <% }) %>
        </div>
    </div>

    <%- include('partials/footer') %>
</body>
</html>