<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Account Settings</title>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@700&family=Roboto&display=swap" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            margin: 0;
            font-family: 'Roboto', sans-serif;
            background-color: #000;
            color: #fff;
        }

        .background-circles .circle {
            position: absolute;
            border-radius: 50%;
            background-color: rgb(212, 255, 0);
            opacity: 0.2;
        }

        .background-circles .circle.small {
            width: 50px;
            height: 50px;
            bottom: 20px;
            left: 20px;
        }

        .background-circles .circle.medium {
            width: 100px;
            height: 100px;
            top: 20px;
            right: 20px;
        }

        .background-circles .circle.large {
            width: 150px;
            height: 150px;
            bottom: 50px;
            right: 50px;
        }
    </style>
</head>
<body class="relative bg-black">
    <nav class="bg-black text-white fixed w-full z-10 top-0 shadow">
        <div class="container mx-auto flex flex-wrap items-center justify-between py-4 px-4">
            <!-- Logo -->
            <div class="flex items-center gap-x-2">
                <img src="/images/New Project.png" alt="Logo" class="w-10 h-10 rounded-full" />
                <a href="/" class="text-white font-bold text-2xl lg:text-4xl">BYTEBURST</a>
            </div>

            <!-- Hamburger Menu for Mobile -->
            <div class="block lg:hidden">
                <button id="nav-toggle" class="text-white text-2xl focus:outline-none">
                    <i class="fas fa-bars"></i>
                </button>
            </div>

            <!-- Navigation Links -->
            <div id="nav-content" class="hidden lg:flex lg:items-center w-full lg:w-auto">
                <ul class="lg:flex items-center space-y-4 lg:space-y-0 lg:space-x-6">
                    <li><a href="/" class="hover:text-gray-400">HOME</a></li>
                    <li><a href="/about" class="hover:text-gray-400">ABOUT US</a></li>
                    <li><a href="/contact" class="hover:text-gray-400">CONTACT</a></li>
                    <li><a href="/dashboard" class="hover:text-gray-400">DASHBOARD</a></li>
                    <li><a href="/signin" class="hover:text-gray-400">SIGN OUT</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!-- Background Circles -->
    <div class="background-circles">
        <div class="circle small"></div>
        <div class="circle medium"></div>
        <div class="circle large"></div>
    </div>

    <!-- Settings Content -->
    <div class="min-h-screen pt-24 pb-12 px-4">
        <div class="max-w-4xl mx-auto">
            <h1 class="text-3xl font-bold text-yellow-400 mb-8">Account Settings</h1>

            <!-- User Information Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <!-- Personal Information -->
                <div class="bg-gray-800/80 backdrop-blur-sm rounded-lg p-6">
                    <h2 class="text-xl text-yellow-400 mb-4 flex items-center">
                        <i class="fas fa-user-circle mr-2"></i>
                        Personal Information
                    </h2>
                    <div class="space-y-4">
                        <div>
                            <label class="text-gray-400">Username</label>
                            <p class="text-white"><%= user.username %></p>
                        </div>
                        <div>
                            <label class="text-gray-400">Email</label>
                            <p class="text-white"><%= user.email %></p>
                        </div>
                        <div>
                            <label class="text-gray-400">Age</label>
                            <p class="text-white"><%= user.age %></p>
                        </div>
                    </div>
                </div>

                <!-- Social Media -->
                <div class="bg-gray-800/80 backdrop-blur-sm rounded-lg p-6">
                    <h2 class="text-xl text-yellow-400 mb-4 flex items-center">
                        <i class="fas fa-share-alt mr-2"></i>
                        Social Media
                    </h2>
                    <div class="space-y-4">
                        <div>
                            <label class="text-gray-400">Instagram</label>
                            <p class="text-white flex items-center">
                                <i class="fab fa-instagram mr-2"></i>
                                <%= user.instagram || 'Not provided' %>
                            </p>
                        </div>
                        <div>
                            <label class="text-gray-400">Facebook</label>
                            <p class="text-white flex items-center">
                                <i class="fab fa-facebook mr-2"></i>
                                <%= user.facebook || 'Not provided' %>
                            </p>
                        </div>
                    </div>
                </div>

                <!-- Address Information -->
                <div class="bg-gray-800/80 backdrop-blur-sm rounded-lg p-6 md:col-span-2">
                    <h2 class="text-xl text-yellow-400 mb-4 flex items-center">
                        <i class="fas fa-map-marker-alt mr-2"></i>
                        Address Information
                    </h2>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <label class="text-gray-400">Street Address</label>
                            <p class="text-white"><%= user.address.street %></p>
                        </div>
                        <div>
                            <label class="text-gray-400">Suburb</label>
                            <p class="text-white"><%= user.address.suburb %></p>
                        </div>
                        <div>
                            <label class="text-gray-400">City</label>
                            <p class="text-white"><%= user.address.city %></p>
                        </div>
                        <div>
                            <label class="text-gray-400">Postal Code</label>
                            <p class="text-white"><%= user.address.postalCode %></p>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button class="bg-yellow-400 text-black px-6 py-2 rounded-lg hover:bg-yellow-300 transition-colors duration-300 flex items-center justify-center">
                    <i class="fas fa-edit mr-2"></i>
                    Edit Profile
                </button>
                <button onclick="showDeleteModal()" class="bg-red-500 text-white px-6 py-2 rounded-lg hover:bg-red-600 transition-colors duration-300 flex items-center justify-center">
                    <i class="fas fa-trash-alt mr-2"></i>
                    Delete Account
                </button>
            </div>
        </div>
    </div>
    <!-- Delete Confirmation Modal -->
<div id="deleteModal" class="fixed inset-0 z-50 hidden">
    <div class="fixed inset-0 bg-black/75 backdrop-blur-sm"></div>
    <div class="fixed inset-0 flex items-center justify-center p-4">
        <div class="bg-gray-800 rounded-lg max-w-md w-full p-6 relative">
            <div class="text-center">
                <div class="mb-4 text-red-500">
                    <i class="fas fa-exclamation-triangle text-4xl"></i>
                </div>
                <h3 class="text-xl font-bold text-white mb-4">Delete Account</h3>
                <p class="text-gray-300 mb-6">Are you sure you want to delete your account? This action cannot be undone.</p>
                <div class="flex justify-center gap-4">
                    <form action="/delete-account" method="POST">
                        <button type="submit" class="bg-red-500 text-white px-6 py-2 rounded-lg hover:bg-red-600 transition-colors duration-300">
                            Delete
                        </button>
                    </form>
                    <button onclick="closeDeleteModal()" class="bg-gray-600 text-white px-6 py-2 rounded-lg hover:bg-gray-700 transition-colors duration-300">
                        Cancel
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

    <%- include('footer') %>

    <script>
        // Navigation toggle for mobile
        document.getElementById('nav-toggle').onclick = function() {
            document.getElementById("nav-content").classList.toggle("hidden");
        };
    </script>
    <script>
        // Existing navigation toggle code
        document.getElementById('nav-toggle').onclick = function() {
            document.getElementById("nav-content").classList.toggle("hidden");
        };
    
        // Delete modal functions
        function showDeleteModal() {
            document.getElementById('deleteModal').classList.remove('hidden');
            document.body.style.overflow = 'hidden';
        }
    
        function closeDeleteModal() {
            document.getElementById('deleteModal').classList.add('hidden');
            document.body.style.overflow = 'auto';
        }
    
        // Close modal when clicking outside
        document.getElementById('deleteModal').addEventListener('click', function(event) {
            if (event.target === this) {
                closeDeleteModal();
            }
        });
    
        // Close modal with Escape key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape') {
                closeDeleteModal();
            }
        });
    </script>
</body>
</html>